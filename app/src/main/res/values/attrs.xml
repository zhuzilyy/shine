<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--MEditText-->
    <declare-styleable name="MEditText">
        <attr name="me_lable_src" format="reference|color"/>
        <attr name="me_hint" format="string"/>
        <attr name="me_text" format="string"/>
        <attr name="me_del_enable" format="boolean"/>
        <attr name="me_eye_enable" format="boolean"/>
        <attr name="me_inputType" format="enum">
            <enum name="normal" value="0"/>
            <enum name="password" value="1"/>
            <enum name="number" value="2"/>
        </attr>
        <attr name="me_maxLength" format="integer"/>
        <attr name="me_textColor" format="color"/>
        <attr name="me_hintColor" format="color"/>
        <attr name="me_textSize" format="dimension"/>
        <attr name="me_background" format="reference|color"/>
        <attr name="me_padding_left" format="dimension"/>
        <attr name="me_padding_right" format="dimension"/>
        <attr name="me_search_action" format="enum">
            <!--回车键，按下后光标到下一行 -->
            <enum name="actionNone" value="0"/>
            <!--Go-->
            <enum name="actionGo" value="1"/>
            <!--放大镜-->
            <enum name="actionSearch" value="2"/>
            <!--Send-->
            <enum name="actionSend" value="3"/>
            <!--Next-->
            <enum name="actionNext" value="4"/>
            <!--Done-->
            <enum name="actionDone" value="5"/>
        </attr>
    </declare-styleable>

    <!--xzyTitle-->
    <declare-styleable name="XTitleView">
        <!--左边的文字-->
        <attr name="tv_left" format="string"/>
        <!--右边的文字-->
        <attr name="tv_right" format="string"/>
        <!--back图标是否显示-->
        <attr name="isshow_back" format="enum">
            <enum name="visable" value="0"/>
            <enum name="invisable" value="1"/>
            <enum name="gone_" value="2"/>
        </attr>
        <!--右边的文字是否显示-->
        <attr name="isshow_right_tv" format="enum">
            <enum name="visable" value="0"/>
            <enum name="invisable" value="1"/>
            <enum name="gone" value="2"/>
        </attr>
        <!--右边的图标是否显示-->
        <attr name="isshow_right_iv" format="enum">
            <enum name="visable" value="0"/>
            <enum name="invisable" value="1"/>
            <enum name="gone" value="2"/>e
        </attr>
        <!--title文字是靠左显示还是居中-->
        <attr name="graty_title" format="enum">
            <enum name="left" value="0"/>
            <enum name="middle" value="1"/>
        </attr>
        <!--title文字的大小-->
        <attr name="titleSize" format="dimension"/>
        <!--back图标的引用-->
        <attr name="back_src" format="reference|color"/>
        <!--右边图标的引用-->
        <attr name="right_iv_scr" format="reference|color"/>
        <!--背景色的设置-->
        <attr name="title_background_color" format="color"/>
        <!--title颜色-->
        <attr name="titleColor" format="color"/>


    </declare-styleable>
</resources>