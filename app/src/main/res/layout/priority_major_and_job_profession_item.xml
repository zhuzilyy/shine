<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <!--head-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"

        >
        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_10"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tv_collegeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="北京大学"
                android:textSize="18sp"
                android:textColor="@color/black"

                />
            <TextView
                android:id="@+id/tv_score"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017录取线：513/   计划：5/北京"
                android:textSize="12sp"
                android:textColor="@color/gray"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_toLeftOf="@+id/rightback_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            >
            <TextView
                android:id="@+id/tv_luqu"
                android:layout_toLeftOf="@+id/rightback_"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23"
                android:textSize="30sp"
                android:textColor="@color/cicle_red"

                />
            <TextView
                android:layout_marginLeft="@dimen/dp_3"
                android:layout_toLeftOf="@+id/rightback_"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="%"
                android:visibility="gone"
                android:textSize="14sp"
                android:textColor="@color/cicle_red"

                />
        </LinearLayout>

        <ImageView
            android:id="@+id/rightback_"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/right_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            />

    </RelativeLayout>

    <com.qianyi.shine.ui.home.view.MyListView
        android:id="@+id/lv_major_job"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>