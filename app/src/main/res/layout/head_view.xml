<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:gravity="center"

    android:orientation="vertical">
    <!--蓝色部分-->
    <LinearLayout
        android:visibility="visible"
        android:id="@+id/main_sectionOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_blue"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="50dp"
        android:paddingTop="15dp">
        <!--定位+搜索-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/dp_10">
            <!--定位-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_10"
                android:gravity="center">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/location" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="沈阳" />

            </LinearLayout>
            <!--搜索-->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/shape_corner">


            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center"
            android:text="适合您的大学(所)"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/suitCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="579"
            android:textColor="@color/white"
            android:textSize="50sp"

            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@mipmap/main_line" />

        <LinearLayout
            android:layout_width="168dp"
            android:layout_height="30dp"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/shape_stroke"
            android:orientation="horizontal"

            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="文科"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_6"
                android:layout_marginTop="@dimen/dp_6"
                android:background="@color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="347分"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_6"
                android:layout_marginTop="@dimen/dp_6"
                android:background="@color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="二本"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>
    <!--第二部分-->
    <LinearLayout
        android:id="@+id/main_sectionTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_sectionOne"
        android:layout_marginTop="-25dp"
        android:orientation="vertical">
        <!--冲刺，保守，稳妥-->
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            app:cardCornerRadius="@dimen/dp_8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <!--冲刺-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/count2"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:text="256"
                        android:textColor="@color/main_blue" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:background="@drawable/circle_red" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_6"
                            android:text="冲刺" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/gray" />
                <!--保守-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/count3"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:text="256"
                        android:textSize="16sp"
                        android:textColor="@color/main_blue" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:background="@drawable/circle_yellow" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_6"
                            android:text="冲刺" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/gray" />
                <!--稳妥-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/count4"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:text="256"
                        android:textSize="16sp"
                        android:textColor="@color/main_blue" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:background="@drawable/circle_green" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_6"
                            android:text="冲刺" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </android.support.v7.widget.CardView>
        <!--院校优先填报-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@mipmap/main_bg01">
            <ImageView
                android:id="@+id/icon01"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@mipmap/icon01"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="@dimen/dp_10"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="院校优先填报"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/icon01"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/dp_10"
                android:gravity="center_vertical"
                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/double_right_arrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                />

        </RelativeLayout>
        <!--专业优先填报-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@mipmap/main_bg01">
            <ImageView
                android:id="@+id/icon02"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@mipmap/icon02"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="@dimen/dp_10"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="专业优先填报"
                android:layout_toRightOf="@+id/icon02"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginLeft="@dimen/dp_10"
                android:gravity="center_vertical"
                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/double_right_arrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                />

        </RelativeLayout>
        <!--智能填报-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@mipmap/main_bg01">
            <ImageView
                android:id="@+id/icon03"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@mipmap/icon03"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="@dimen/dp_10"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="智能填报"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/icon03"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/dp_10"
                android:gravity="center_vertical"
                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/double_right_arrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                />

        </RelativeLayout>
    </LinearLayout>
    <!--第三部分-->
    <LinearLayout
        android:id="@+id/main_sectionThree"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@+id/main_sectionTwo"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        >
        <!--找大学-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@mipmap/find_college"
                />
            <TextView
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_3"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="找大学"
                />

        </LinearLayout>
        <!--查专业-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@mipmap/findout_zhuanye"
                />
            <TextView
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="查专业"
                android:textSize="12sp"
                />

        </LinearLayout>
        <!--搜职业-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@mipmap/search"
                />
            <TextView
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="搜职业"
                android:textSize="12sp"
                />

        </LinearLayout>
        <!--看就业-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@mipmap/look"
                />
            <TextView
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="看就业"
                android:textSize="12sp"
                />

        </LinearLayout>
        <!--测录取率-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@mipmap/test"
                />
            <TextView
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="测录取率"
                />

        </LinearLayout>

    </LinearLayout>
    <!--第四部分 大学推荐-->
    <LinearLayout
        android:id="@+id/main_sectionfour"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@+id/main_sectionThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_10"
        android:orientation="vertical"
        >
        <!--title-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"

            >
            <ImageView
                android:id="@+id/flag"
                android:layout_centerVertical="true"
                android:layout_width="3dp"
                android:layout_height="18dp"
                android:background="@color/main_blue"
                />
            <TextView
                android:layout_toRightOf="@+id/flag"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="推荐大学"
                />
            <ImageView
                android:id="@+id/flag2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/right_arrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
            <TextView
                android:layout_toLeftOf="@+id/flag2"
               android:gravity="center"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="查看更多"
                />


        </RelativeLayout>
        <!--推荐大学-->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/main_headRv"
            android:layout_width="match_parent"
            android:layout_height="85dp"/>

    </LinearLayout>


</RelativeLayout>
