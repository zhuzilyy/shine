<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--head-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@mipmap/college_gate">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/college_logo"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="30dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/college_logo02"
                        app:riv_corner_radius="48dp"

                        />

                    <TextView
                        android:layout_width="28dp"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/college_logo"
                        android:layout_alignRight="@+id/college_logo"
                        android:background="@drawable/shape_corner_blue"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/collegeName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/college_logo"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="北京大学"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/collegeName"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_6"
                        android:text="·985、211、研隶属·"
                        android:textColor="@color/white"
                        android:textSize="14sp" />
                </RelativeLayout>
            </RelativeLayout>
            <!--title-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!--简介-->
                <LinearLayout
                    android:id="@+id/college_Introduction"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/collete_tv01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="简介"
                        android:textColor="@color/main_blue"
                        android:textSize="14sp" />

                    <View
                        android:id="@+id/indicator01"
                        android:layout_width="24dp"
                        android:layout_height="4dp"
                        android:layout_marginTop="@dimen/dp_5"
                        android:background="@drawable/shape_corner_blue" />

                </LinearLayout>
                <!--专业设置-->
                <LinearLayout
                    android:id="@+id/college_ProfessionalSettings"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/collete_tv02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="专业设置"
                        android:textColor="@color/black"

                        android:textSize="14sp" />

                    <View
                        android:id="@+id/indicator02"
                        android:layout_width="50dp"
                        android:layout_height="4dp"
                        android:layout_marginTop="@dimen/dp_5"
                        android:background="@drawable/shape_corner_blue"
                        android:visibility="invisible" />

                </LinearLayout>
                <!--分数线-->
                <LinearLayout
                    android:id="@+id/college_Score"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/collete_tv03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="分数线"
                        android:textColor="@color/black"

                        android:textSize="14sp" />

                    <View
                        android:id="@+id/indicator03"
                        android:layout_width="40dp"
                        android:layout_height="4dp"
                        android:layout_marginTop="@dimen/dp_5"
                        android:background="@drawable/shape_corner_blue"
                        android:visibility="invisible" />

                </LinearLayout>
                <!--就业前景-->
                <LinearLayout
                    android:id="@+id/college_EmploymentProspects"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/collete_tv04"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="就业前景"
                        android:textColor="@color/black"

                        android:textSize="14sp" />

                    <View
                        android:id="@+id/indicator04"
                        android:layout_width="50dp"
                        android:layout_height="4dp"
                        android:layout_marginTop="@dimen/dp_5"
                        android:background="@drawable/shape_corner_blue"
                        android:visibility="invisible" />

                </LinearLayout>


            </LinearLayout>

            <FrameLayout
                android:id="@+id/college_switLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@color/main_blue" />
        </LinearLayout>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:gravity="center"
        android:layout_height="50dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="＋ 加关注"
            android:textSize="16sp"
            android:textColor="@color/main_blue"
            android:background="@drawable/shape_coner_blue"
            android:layout_marginRight="45dp"
            android:layout_marginLeft="45dp"

            />

    </LinearLayout>

</RelativeLayout>