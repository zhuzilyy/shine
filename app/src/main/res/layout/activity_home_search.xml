<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <!--搜索框-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/black_arrow"
            />
        <RelativeLayout
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@drawable/shape_corner_gray"
            >
            <com.qianyi.shine.ui.account.view.MEditText
                android:id="@+id/ed_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:me_hint="请输入搜索内容"
                app:me_textSize="5sp"
                app:me_padding_left="@dimen/dp_8"
                app:me_hintColor="@color/gray"
                app:me_eye_enable="false"
                app:me_del_enable="true"
                app:me_textColor="@color/black"
                app:me_search_action="actionSearch"
                />

        </RelativeLayout>


    </LinearLayout>
    <!---->
    <android.support.design.widget.TabLayout
        android:id="@+id/tablayout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:tabBackground="@color/white"
        app:tabIndicatorColor="@color/main_blue"
        app:tabSelectedTextColor="@color/main_blue"
        app:tabTextColor="@color/gray" />

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tablayout"
        android:layout_marginTop="@dimen/dp_5" />


</LinearLayout>