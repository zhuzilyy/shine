<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <include layout="@layout/layout_title"/>
    <LinearLayout
        android:id="@+id/title_content"
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@color/main_blue"
        >
        <TextView
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="霍兰德兴趣测评"
            android:textColor="@color/white"
            android:textSize="22sp"
            />
        <TextView
            android:id="@+id/tv_introduce"
            android:layout_width="wrap_content"
            android:textSize="15dp"
            android:gravity="center"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_8"
            android:maxLines="5"
            android:ellipsize="end"
            android:textColor="@color/white"
            android:text="到家了开发聚少离多福建省积的房间里的康师傅接受了发福建省的看法房间欧式分是咯金佛弗兰克斯的减肥类似放假了时间发烦死了快就放老司机副书记的弗兰克斯房间里上课的积分就分手了看得见风副书记的分离式即佛类似的纠纷浪费时间大佛发上来的积分"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <TextView
        android:id="@+id/flag"
        android:layout_below="@+id/title_content"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:text="题目没有对错之分，请根据实际情况选择。"
        />
    <TextView
        android:layout_below="@+id/flag"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:layout_marginTop="@dimen/dp_5"
        android:textSize="12sp"
        android:text="需时约18分钟"
        />
    <Button
        android:id="@+id/btn_startTest"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="开始测评"
       android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_40"
        android:background="@drawable/shape_corner_blue"
        android:layout_marginBottom="@dimen/dp_20"
        android:textColor="@color/white"
        android:textSize="16sp"
        />
</RelativeLayout>