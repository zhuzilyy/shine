<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_title"/>
    <View
        android:background="@color/common_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <!--选择省份-->
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="64dp">
        <TextView
            android:layout_centerVertical="true"
            android:layout_marginLeft="20sp"
            android:textSize="15sp"
            android:text="选择高考省份"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" />
        <TextView
            android:id="@+id/tv_selectArea"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="点击选择"
            android:textColor="@color/gray"
            android:textSize="15sp" />
        <ImageView
            android:layout_marginRight="10dp"
            android:id="@+id/iv_arrow"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/arrow_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:background="@color/common_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <!--选择高考种类-->
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="64dp">
        <TextView
            android:gravity="center_vertical"
            android:layout_marginLeft="20sp"
            android:textSize="15sp"
            android:text="选择高考种类"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <RadioGroup
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_width="200dp"
            android:layout_height="match_parent">
            <RadioButton
                android:textColor="@color/color"
                android:background="@drawable/bg_subject"
                android:textSize="15sp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:button="@null"
                android:text="文科"
                android:id="@+id/rb_wenke"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="30dp" />

            <RadioButton
                android:textColor="@color/color"
                android:background="@drawable/bg_subject"
                android:textSize="15sp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:layout_weight="1"
                android:button="@null"
                android:text="理科"
                android:id="@+id/rb_like"
                android:layout_width="0dp"
                android:layout_height="30dp" />
        </RadioGroup>
    </RelativeLayout>
    <View
        android:background="@color/common_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <!--成绩-->
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="64dp">
        <TextView
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:textSize="15sp"
            android:text="请输入您的成绩"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <EditText
            android:singleLine="true"
            android:digits="0.123456789"
            android:textSize="15sp"
            android:layout_alignParentRight="true"
            android:hint="请输入您的成绩"
            android:background="@null"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical|right"
            android:layout_width="120dp"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <View
        android:background="@color/common_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <!--排名-->
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="64dp">
        <TextView
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:textSize="15sp"
            android:text="请输入您的排名"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <EditText
            android:singleLine="true"
            android:digits="0.123456789"
            android:textSize="15sp"
            android:layout_alignParentRight="true"
            android:hint="请输入您的排名"
            android:background="@null"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical|right"
            android:layout_width="120dp"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <View
        android:background="@color/common_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>


    <Button
        android:id="@+id/btn_confirm"
        android:textSize="16sp"
        android:textColor="#fff"
        android:background="@drawable/bg_login"
        android:layout_marginTop="180dp"
        android:layout_gravity="center_horizontal"
        android:text="启程"
        android:layout_width="300dp"
        android:layout_height="45dp" />




</LinearLayout>