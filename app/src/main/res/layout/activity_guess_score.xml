<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <include layout="@layout/layout_title"/>
    <View
        android:background="@color/common_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <!--选择省份-->
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="64dp">
        <TextView
            android:layout_centerVertical="true"
            android:layout_marginLeft="20sp"
            android:textSize="15sp"
            android:text="选择高考省份"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" />
        <TextView
            android:id="@+id/tv_selectArea"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:hint="点击选择"
            android:textColor="@color/gray"
            android:textSize="15sp" />
        <ImageView
            android:layout_marginRight="10dp"
            android:id="@+id/iv_arrow"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/arrow_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:background="@color/common_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <!--选择高考种类-->
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="64dp">
        <TextView
            android:gravity="center_vertical"
            android:layout_marginLeft="20sp"
            android:textSize="15sp"
            android:text="选择高考种类"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <RadioGroup
            android:id="@+id/rg"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_width="200dp"
            android:layout_height="match_parent">
            <RadioButton
                android:checked="true"
                android:textColor="@color/color"
                android:background="@drawable/bg_subject"
                android:textSize="15sp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:button="@null"
                android:text="文科"
                android:id="@+id/rb_wenke"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="30dp" />

            <RadioButton
                android:textColor="@color/color"
                android:background="@drawable/bg_subject"
                android:textSize="15sp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:layout_weight="1"
                android:button="@null"
                android:text="理科"
                android:id="@+id/rb_like"
                android:layout_width="0dp"
                android:layout_height="30dp" />
        </RadioGroup>
    </RelativeLayout>
    <View
        android:background="@color/common_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <!--成绩-->
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="64dp">
        <TextView
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:textSize="15sp"
            android:text="请输入您的成绩"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <EditText
            android:id="@+id/et_myscore"
            android:singleLine="true"
            android:digits="0.123456789"
            android:textSize="15sp"
            android:layout_alignParentRight="true"
            android:hint="请输入您的成绩"
            android:inputType="numberDecimal"
            android:background="@null"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical|right"
            android:layout_width="120dp"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <View
        android:background="@color/common_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <!--排名-->
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="64dp">
        <TextView
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:textSize="15sp"
            android:text="请输入您的排名"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <EditText
            android:id="@+id/et_myrank"
            android:singleLine="true"
            android:digits="0.123456789"
            android:textSize="15sp"
            android:layout_alignParentRight="true"
            android:hint="请输入您的排名(非必须)"
            android:background="@null"
            android:inputType="numberDecimal"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical|right"
            android:layout_width="160dp"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <View
        android:background="@color/common_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <TextView
        android:textColor="@color/cicle_red"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:text="注意:高考出分前请您填写预估分数,正式出分后请立刻修改为真实高考成绩,我们会在第一时间更新分数线等数据,分数填写后可修改两次,请您认真填写。"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_confirm"
        android:textSize="16sp"
        android:textColor="#fff"
        android:background="@drawable/bg_login"
        android:layout_marginTop="180dp"
        android:layout_gravity="center_horizontal"
        android:text="启程"
        android:layout_width="300dp"
        android:layout_height="45dp" />
    </LinearLayout>
    <!--提示的内容-->
    <LinearLayout
        android:clickable="true"
        android:id="@+id/ll_wraning"
        android:background="#99989898"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@drawable/bg_dialog"
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="280dp"
            android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:textSize="16sp"
            android:text="注意"
            android:layout_width="wrap_content"
            android:layout_height="60dp" />
        <TextView
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="温馨提示：高考成绩公布前，请填写预估分数，高考出分后请尽快改为真实成绩，方便为您提供精准的查询与填报服务。"
            />
        <TextView
            android:id="@+id/tv_know"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:text="知道了"
            android:background="@drawable/bg_login"
            android:layout_width="200dp"
            android:layout_height="40dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>