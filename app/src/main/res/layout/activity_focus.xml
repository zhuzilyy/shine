<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_title"/>
    <View
        android:background="@color/common_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <LinearLayout
            android:id="@+id/ll_college"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:text="大学"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <View
                android:id="@+id/view_college"
                android:background="@color/main_blue"
                android:layout_width="30dp"
                android:layout_height="3dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_major"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="专业"
                android:textSize="14sp" />
            <View
                android:visibility="invisible"
                android:id="@+id/view_major"
                android:background="@color/main_blue"
                android:layout_width="30dp"
                android:layout_height="3dp"/>
        </LinearLayout>



        <LinearLayout
            android:id="@+id/ll_profession"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="职业"
                android:textSize="14sp" />
            <View
                android:visibility="invisible"
                android:id="@+id/view_profession"
                android:background="@color/main_blue"
                android:layout_width="30dp"
                android:layout_height="3dp"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_measurement"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="测评报告"
                android:textSize="14sp" />
            <View
                android:visibility="invisible"
                android:id="@+id/view_measurement"
                android:background="@color/main_blue"
                android:layout_width="30dp"
                android:layout_height="3dp"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_marginTop="5dp"
        android:background="@color/common_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <FrameLayout
        android:id="@+id/fl_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>